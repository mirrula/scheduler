<%= form_for @list do |f| %>

  <div class="form-group">
    <%= f.label :'Название списка' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    <%= link_to 'Вернуться', :back, class: 'btn btn-outline-secondary' %>
  </div>

<% end %>