<article class="list">

    <section class="list-head">
        <h1><%= @list.title %></h1>
        <small>
            <time><%= @list.created_at.to_date.strftime("%d %B, %Y") %></time>
            |
            <%= link_to 'Изменить', edit_list_path(@list) %>
            |
            <%= link_to 'Удалить', list_path(@list), method: :delete, data: { confirm: 'Удалить список?' } %>
        </small>
    </section>

    <section class="list-body" id="tasks-section">
        <%= @list.tasks.each do |task| %>
        <li>
            <%= link_to task.title, task_path(task), class: "nav-link #{}" %>
        </li>
        <% end %>
    </section>

</article>

